<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- mc.partner views-->
        <record id="view_mc_customer_tree" model="ir.ui.view">
            <field name="name">view.mc.customer.tree</field>
            <field name="model">mc.partner</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="type"/>
                    <field name="phone"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="view_mc_supplier_tree" model="ir.ui.view">
            <field name="name">view.mc.supplier.tree</field>
            <field name="model">mc.partner</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="phone"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="view_mc_customer_partner_form" model="ir.ui.view">
            <field name="name">view.mc.customer.partner.form</field>
            <field name="model">mc.partner</field>
            <field name="arch" type="xml">
                <form string="Contact">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [120, 120]}'/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                        </div>
                        <group col="4">
                                <field name="code" colspan="2"/>
                                <field name="date" colspan="2"/>
                                <field name="type" widget="radio" attrs="{'required':[('supplier','=',False)], 'invisible': [('supplier', '=', True)]}" colspan="4"/>
                        </group>
                        <group string="Contact Information">
                            <group>
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="email" widget="email"/>
                            </group>
                        </group>

                        <field name="supplier" invisible="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_mc_customer_search" model="ir.ui.view">
            <field name="model">mc.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="type"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <separator/>
                    <filter string="Active" name="all" domain="[('active', '=', True)]" />
                    <filter string="Inactive" name="all" domain="[('active', '=', False)]" />
                    <group expand="0" string="Group By">
                        <filter string="State" domain="[]" context="{'group_by':'active'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="view_mc_supplier_search" model="ir.ui.view">
            <field name="model">mc.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <separator/>
                    <filter string="Active" name="all" domain="[('active', '=', True)]" />
                    <filter string="Inactive" name="all" domain="[('active', '=', False)]" />
                    <group expand="0" string="Group By">
                        <filter string="State" domain="[]" context="{'group_by':'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_mc_partner_customer" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mc.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('supplier', '=', False)]</field>
            <field name="context">{'supplier' : False, 'tree_view_ref':'view_mc_customer_tree'}</field>
            <field name="search_view_id" ref="view_mc_customer_search"/>
            <field name="filter" eval="True"/>
        </record>

        <record id="action_mc_partner_supplier_view_tree" model="ir.actions.act_window.view">
            <field name="sequence">1</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_mc_customer_tree"/>
            <field name="act_window_id" ref="action_mc_partner_customer"/>
        </record>

        <record id="action_mc_partner_supplier_view_form" model="ir.actions.act_window.view">
            <field name="sequence">2</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_mc_customer_partner_form"/>
            <field name="act_window_id" ref="action_mc_partner_customer"/>
        </record>

        <record id="action_mc_partner_supplier" model="ir.actions.act_window">
            <field name="name">Supplier</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mc.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('supplier', '=', True)]</field>
            <field name="context">{'supplier' : True, 'tree_view_ref':'view_mc_supplier_tree'}</field>
            <field name="search_view_id" ref="view_mc_supplier_search"/>
            <field name="filter" eval="True"/>
        </record>

        <record id="action_mc_partner_supplier_view_tree" model="ir.actions.act_window.view">
            <field name="sequence">1</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_mc_supplier_tree"/>
            <field name="act_window_id" ref="action_mc_partner_supplier"/>
        </record>

        <record id="action_mc_partner_supplier_view_form" model="ir.actions.act_window.view">
            <field name="sequence">2</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_mc_customer_partner_form"/>
            <field name="act_window_id" ref="action_mc_partner_supplier"/>
        </record>

    </data>
</odoo>
